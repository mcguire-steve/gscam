<launch>
  <!-- This launchfile exercises the GStreamer Pipeline function to use GStreamer to process some images -->
  <!-- <arg name="launch_prefix" default="gdb -ex run -args"/> -->
  <arg name="launch_prefix" default="" />
  <arg name="DEVICE" default="/dev/video0"/>
  <!-- The GStreamer framerate needs to be an integral fraction -->
  <arg name="FPS" default="30/1"/>
  <arg name="PUBLISH_FRAME" default="false"/>
  <arg name="GST10" default="true"/>
  <!-- <node name="uvc_src" pkg="libuvc_camera" type="camera_node" /> -->
  
  <node name="gspipe_test" pkg="gscam" type="gspipeline_node" output="screen" launch-prefix="$(arg launch_prefix)">
    <param name="image" value="/image_raw" />
    <param name="camera_name" value="default"/>
    <param name="camera_info_url" value="package://gscam/examples/uncalibrated_parameters.ini"/>
 
    <!-- <param name="gscam_config" value="tee name=t ! queue ! videoconvert ! xvimagesink t. ! queue ! videoconvert ! video/x-raw,format=RGB,width=(int)160,height=(int)80 ! videoconvert "/> -->
    <!--  <param name="gscam_config" value="queue ! videoconvert ! optv mode=0 ! videoconvert "/> -->
    <param name="image_encoding" value="jpeg"/>
    <param name="gscam_config" value="queue ! videoconvert ! clockoverlay shaded-background=true ! optv mode=0 ! jpegenc quality=80 "/> 
    <!-- <param name="gscam_config" value="videoconvert" /> -->
    <param name="frame_id" value="/v4l_frame"/>
    <param name="sync_sink" value="false"/>
  </node>

  <node if="$(arg PUBLISH_FRAME)" name="v4l_transform" pkg="tf" type="static_transform_publisher" args="1 2 3 0 -3.141 0 /world /v4l_frame 10"/>
</launch>